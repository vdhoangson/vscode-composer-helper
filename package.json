{
  "name": "vs-composer-helper",
  "displayName": "Composer Helper - VS Code",
  "description": "Intellisense for composer.json, PHP dependency manager.",
  "version": "0.0.1",
  "author": "vdhoangson",
  "publisher": "vdhoangson",
  "license": "MIT",
  "icon": "composer-helper.png",
  "homepage": "https://github.com/vdhoangson/vscode-composer-helper",
  "repository": {
    "type": "git",
    "url": "https://github.com/vdhoangson/vscode-composer-helper.git"
  },
  "bugs": {
    "url": "https://github.com/vdhoangson/vscode-composer-helper/issues"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "php",
    "composer",
    "dependency",
    "manager",
    "autocomplete"
  ],
  "engines": {
    "vscode": "^1.82.0"
  },
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Composer Helper",
        "properties": {
          "vsComposerHepler.packagistCache": {
            "type": "integer",
            "default": 1200,
            "minimum": 60,
            "description": "Specifies how long requests to packagist are cached [seconds]"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.0.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "vscode-cache": "^0.3.0"
  }
}
